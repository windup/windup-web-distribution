<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>with-authentication</id>
    <formats>
        <format>zip</format>
    </formats>

    <baseDirectory>${project.build.finalName}</baseDirectory>

    <!-- Add distribution files -->
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/${wildfly.directory}</directory>
            <outputDirectory></outputDirectory>
            <excludes>
                <exclude>**/keycloak.lock.db</exclude>
                <exclude>bin/standalone.conf</exclude>
                <exclude>bin/standalone.conf.bat</exclude>
                <exclude>standalone/data/content/**/*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory></outputDirectory>
            <filtered>true</filtered>
            <includes>
               <include>/rhamt-version.txt</include>
               <include>/README.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory></outputDirectory>
            <filtered>false</filtered>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
               <exclude>/rhamt-version.txt</exclude>
               <exclude>/README.txt</exclude>
            </excludes>
        </fileSet>
        <!-- Add the overlay files -->
        <fileSet>
            <directory>src/main/wildfly_overlay</directory>
            <outputDirectory></outputDirectory>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/wildfly_overlay/themes/rhamt</directory>
            <outputDirectory>themes/rhamt</outputDirectory>
            <excludes>
                <exclude>login/auto_login.theme.properties</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <!-- Override the theme.properties with the autologin one -->
    <files>
        <file>
            <source>src/main/wildfly_overlay/themes/rhamt/login/auto_login.theme.properties</source>
            <outputDirectory>themes/rhamt/login</outputDirectory>
            <destName>theme.properties</destName>
            <filtered>false</filtered>
        </file>
    </files>

</assembly>
